<div class="header d-flex justify-content-between">
  <h1><%= @task.title %></h1>
  <button class="btn btn-primary mt-0"><%= link_to "Edit this task", edit_task_path%></button>
</div>

<div class="show-task alert alert-secondary" role="alert">
  <p><%= @task.details %></p>
</div>

<div class="task-completed">
  <% if @task.completed %>
    <p><i class="fa-regular fa-square-check text-primary"></i> <%= "This task is completed" %></p>
  <% else %>
    <p><i class="fa-regular fa-square text-primary"></i> <%= "This task is not completed" %></p>
  <% end %>
</div>

<hr>

<p><i class="fa-solid fa-arrow-rotate-left text-primary"></i> <%= link_to "Back to list", tasks_path  %></p>
